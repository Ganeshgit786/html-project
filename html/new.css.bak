*{
	margin:0;
	padding:0;
}

body{
	
	display:flex;
	justify-content:center;
	align-items:center;
	background:url("f.jpg");
	background-repeat:no-repeat;
	color:white;	
}

.container{
width:430px;
height: 600px;	
border:2px solid white;
border-radius:20px;
display:flex;
backdrop-filter:blur(10px);
box-shadow:0  0  50px yellow;
flex-direction:column;
}

.container h1{
	font-size:20px;
	color:white;
	text-align:center;
	margin-top:20px;	
}

.container input{
	margin-left:2px;
	margin-top:20px;
	display:flex;
	justify-content:center;
	width:425px;
	border-radius:20px;
	outline:none;
	color:white;
	height:35px;
    font-size:20px;
    padding-left:15px;	
	background:transparent;
	border:2px solid white;
	
	
}

input::placeholder{
	color:white;
	padding-left:20px;
	font-size:20px;

}


.container .sec {
	
	margin-top:26px;
	font-size:20px;	
	display:flex;
	flex-direction:row;
	padding-left:10px;
	 
}

.sec select{
	margin-left:10px;	
	
}


.container textarea{
	
	width:430px;
	height:100px;
	font-size:15px;
	border-radius:15px;
	padding-left:20px;
	margin-top:20px;
}

.container .row{
	align-items:center;
	margin-top:20px;

}
.container .row input{
	
	margin-left:20px;
	width:27px;
	
}
.container .row p{
	
	font-size:20px;
	
	
	
}


.container button{
	margin-left:170px;
	width:90px;
	height:40px;
	margin-top:20px;
	outline:none;
	border-radius:20px;
	border:2px solid white;
	justify-content:center;
}

button:hover{
	
	color:white;
	background:black;
	
}